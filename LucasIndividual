#include <reg932.h>
sbit beats = PX^X;



if (beats == 0)
{
  BINC = BINC + 10;
  if (BINC == 100)
  {
    BINC = 120;
  }
 }
 
 if (beats == 0)
{
  BINC = BINC + 20;
  if (BINC == 160)
  {
    BINC = 100;
  }
 }
 

void display_BPM(char one, char two, char three)
{

	uart_init();

	while (1)
        {
         if (beats == 0)
          {
            uart_transmit(one);
            uart_transmit(two);
	    uart_transmit(three);
            uart_transmit(' ');
            uart_transmit('B');
            uart_transmit('P');
	    uart_transmit('M');
	    while (beats==0);
	  }
	}
}
