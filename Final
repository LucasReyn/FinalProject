#include <reg932.h>

sbit tetr = P2^0;
sbit sponge = P0^2;
sbit pia = P0^1;
sbit beats = P2^3;

sbit sw1 = P2^1;
sbit sw2 = P0^3;
sbit sw3 = P2^2;
sbit swMid = P1^4;
sbit wave = P1^7;
/*sbit LED1 = P2^5;
sbit LED2 = P0^7;
sbit LED3 = P2^6;
sbit LED4 = P1^6;
sbit LED5 = P0^4;*/
sbit LED1 = P2^5;
sbit LED2 = P0^7;
sbit LED3 = P2^6;
sbit LED4 = P0^6;
sbit LED5 = P1^6;
sbit LED6 = P0^4;
sbit LED7 = P2^4;
sbit LED8 = P0^5;
sbit LED9 = P2^7;
sbit LEDa = P1^2;
sbit LEDb = P1^3;
sbit LEDc = P2^2;
sbit LEDd = P2^1;
sbit LEDe = P1^4;
sbit LEDf = P0^0;
static bit mtxbusy;
sbit testLED = P2^7;


#define note_A4 2095
#define note_C5 1761
#define note_D5 1569
#define note_C4 3523
#define note_D4 3138
#define note_E4 2796
#define note_F4 2639
#define note_F3 5278
#define note_D4b 3325
#define note_D4s 2962
#define note_A5 1047
#define note_B5 933
#define note_C6 881
#define note_D6 785
#define note_E6 699
#define note_B3 3954
#define note_A3 4189

unsigned int quarterNote = 450;
unsigned int wholeNote;
unsigned int halfNote;
unsigned int eighthNote;
unsigned int note_test;
int globalNote = 0;
int inc;
char globalCount; // for piano chord selection

void spongebob();
void playNote(int note);
void stopNote();
void piano();
void display();
void uart_transmit(char c);
void playnotetime(int note,int n);
void tetris();
void setTempo();
unsigned char uart_get(void);
void uart_init(void);
void delay(long x);
void displayBPM();

void main()
{
  P2M1 = 0x00;
  P1M1 = 0x00;
  P0M1 = 0x00;
  IEN0 = 0x8A;
  inc = 0;
  while(1)
  {
  	LED1 = 1;
	LED2 = 1;
	LED3 = 1;
	LED4 = 1;
	LED5 = 1;
	LED6 = 1;
	LED7 = 1;
	LED8 = 1;
	LED9 = 1;
    
	if (~beats)
    {

			if (inc == 0)
			{
				displayBPM();
				quarterNote = 450;
				setTempo();
				inc++;

			}
			else if ( inc == 1)
			{
				displayBPM();
				quarterNote = 900;
				setTempo();
				inc++;
			}
			else if (inc == 2)
			{
				displayBPM();
				quarterNote = 300;
				setTempo();
				inc = 0;
			}
		   while (~beats);
	  
	}

  	if(~tetr)
	{
		
		display();
		testLED = 0;
		tetris();
	}

	if(~sponge)
	{
		display();
		testLED = 0;
		spongebob();
	}
  	piano();
  }
}

void TIMR1ISR() interrupt 3
{
	TR1 = 0;
	wave = ~wave;
	TH1 = -(globalNote>>8);
	TL1 = -globalNote;
	TF1 = 0;
	TR1 = 1;
}

void playNote(int note)
{
	IEN0 = 0x8A;
	TMOD = 0x10;
	globalNote = note;
	TH1 = -(note>>8);
	TL1 = -note;
	TR1 = 1;
}


void stopNote()
{
	IEN0 = 0x00;
	TR1 = 0;
	TF1 = 0;
	wave = 1;
}

void piano()
{
	unsigned int mod1;
	unsigned int mod2;
	unsigned int mod3;
	if(swMid == 0)
	{
		if(globalCount == 0)
		{
			LED4 = ~LED4;
			mod1+= 256; // changes A4 to G4
			mod2+= 216; // changes C4 to A4#
			mod3+= 192; // changes D5 to C5
			globalCount++;
		}
		else if(globalCount < 4)
		{
			LED5 = ~LED5;
			mod1 += 3000;
			mod2 += 4000;
			mod3 += 5000;
			globalCount++;
		}
		else
		{
			LED4 = 1;
			LED5 = 1;
			mod1 = 0;
			mod2 = 0;
			mod3 = 0;
			globalCount = 0;
		}
		while(swMid == 0);
	}
	if(sw1 == 0)
	{
		LED1 = 0;
		playNote(note_A4+mod1);
		while(sw1 == 0);
		LED1 = 1;
	}
	if(sw2 == 0)
	{
		LED2 = 0;
		playNote(note_C5+mod2);
		while(sw2 == 0);
		LED2 = 1;
	}

	if(sw3 == 0)
	{
		LED3 = 0;
		playNote(note_D5+mod3);
		while(sw3 == 0);
		LED3 = 1;
	}
	else
		stopNote();
}
