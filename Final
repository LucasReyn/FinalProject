void uart_init
  (
  void
  )
{
  // configure UART
  // clear SMOD0
  PCON &= ~0x40;
  SCON = 0x50;
  // set or clear SMOD1
  PCON &= 0x7f;
  PCON |= (0 << 8);
  SSTAT = 0x00;

  // enable break detect
  AUXR1 |= 0x40;

  // configure baud rate generator
  BRGCON = 0x00;
  BRGR0 = 0xF0;
  BRGR1 = 0x02;                      //BRGR0 and BRGR1 were
  BRGCON = 0x03;                     //changed to set the baud rate to 9600

  // TxD = push-pull, RxD = input
  P1M1 &= ~0xfe;
  P1M1 |= 0x02;
  P1M2 &= ~0xfd;
  P1M2 |= 0x01;
  
  

  // initially not busy
  mtxbusy = 0;

  // set isr priority to 0
  IP0 |= 0x10;
  IP0H |= 0x10;
  // enable uart interrupt
  ES = 1;
  EA = 1;

} // uart_init

void delay(long x)
{	
	long i= 0;
	for(i;i<x;i++);

}

void uart_isr(void) interrupt 4 using 1
{
  if (RI)
  {
            // PUT CODE THAT EXECUTES WHEN RECEIVING A BYTE HERE
	 char letter = uart_get();
     if (letter == 's')
	  {
        spongebob();
	  }

	  if (letter == 't')
	  {
        tetris();
	  }	  
     
    // clear interrupt flag
    RI = 0;
  } // if

  if (TI)
  {
    // clear interrupt flag
    TI = 0;
    // no longer busy
    mtxbusy = 0;
  } // if

} // uart_isr
 

unsigned char uart_get   
(  
 void   
) 
{   
return SBUF; 
} // uart_get

void uart_transmit(char c)
{
  while(mtxbusy);
  mtxbusy = 1;
  SBUF = c;
}

void tetris()
{
	LED1 = 1;
	LED2 = 1;
	LED3 = 1;
	LED4 = 1;
	LED5 = 1;
	LED6 = 1;
	LED7 = 1;
	LED8 = 1;
	LED9 = 1;
	setTempo();
	LEDe = 0;
	playnotetime(note_E4, quarterNote);
	LEDe = 1;
	if(~sponge || ~pia)
		
		return;
	LEDb = 0;
	playnotetime(note_B3, eighthNote);
	LEDb = 1;
	if(~sponge || ~pia)
		
		return;
	LEDc = 0;
	playnotetime(note_C4, eighthNote);
	LEDc = 1;
	if(~sponge || ~pia)
		
		return;
	LED7 = 0;
	LEDd = 0;
	playnotetime(note_D4, quarterNote);
	LEDd = 1;
	if(~sponge || ~pia)
		
		return;
	LEDc = 0;
	playnotetime(note_C4, eighthNote);
	LEDc = 1;
	if(~sponge || ~pia || ~beats)
		
		return;
	LEDb = 0;
	playnotetime(note_B3, eighthNote);
	LEDb = 1;
	if(~sponge || ~pia)
		
		return;
	LED7 = 1;
	LED4 = 0;
	LEDa = 0;
	playnotetime(note_A3, quarterNote);
	LEDa = 1;
	if(~sponge || ~pia)
		
		return;
	LEDa = 0;
	playnotetime(note_A3, eighthNote);
	LEDa = 1;
	if(~sponge || ~pia)
		
		return;
	LEDc = 0;
	playnotetime(note_C4, eighthNote);
	LEDc = 1;
	if(~sponge || ~pia)
		
		return;
	LED4 = 1;
	LED1 = 0;
	LED9 = 0;
	LEDe = 0;
	playnotetime(note_E4, quarterNote);
	LEDe = 1;
	if(~sponge || ~pia)
		
		return;
	LEDd = 0;
	playnotetime(note_D4, eighthNote);
	LEDd = 1;
	if(~sponge || ~pia)
		
		return;
	LEDc = 0;
	playnotetime(note_C4, eighthNote);
	LEDc = 1;
	if(~sponge || ~pia)
		
		return;
	LED9 = 1;
	LED6 = 0;
	LEDb = 0;
	playnotetime(note_B3, 3*eighthNote);
	LEDb = 1;
	if(~sponge || ~pia)
		
		return;
	LEDc = 0;
	playnotetime(note_C4, eighthNote);
    LEDc = 1;
	if(~sponge || ~pia)
		
		return;
	LED6 = 1;
	LED3 = 0;
	LED8 = 0;
	LEDd  = 0;
	playnotetime(note_D4, 2*eighthNote);
	LEDd = 1;
	if(~sponge || ~pia)
		
		return;
	LEDe = 0;
	playnotetime(note_E4, 2*eighthNote);
	LEDe = 1;
	if(~sponge || ~pia)
		
		return;
	LED8 = 1;
	LED5 = 0;
	LEDc = 0;
	playnotetime(note_C4, quarterNote);
	LEDc = 1;
	if(~sponge || ~pia)
		
		return;
	LED5 = 1;
	LED2 = 0;
	LEDa = 0;
	playnotetime(note_A3, quarterNote);
	LEDa = 1;
	if(~sponge || ~pia)
		
		return;
	LED1 = 1;
	LED2 = 1;
	LED3 = 1;
	LEDa = 0;
	playnotetime(note_A3, 2*quarterNote);
	LEDa = 1;
	if(~sponge || ~pia)
		
		return;
	LED1 = 0;
	LED2 = 0;
	LED3 = 0;	
}

//
void playnotetime(int note, unsigned int n)
{
  unsigned int z = n;
  int i;
  playNote(note);
  while(z-- > 0)
  {
	for(i = 0; i < 250; i++);
  }
  stopNote();
}


void spongebob()
{

	uart_init();

	setTempo();
	LEDd = 0;
	playnotetime(note_D4b, 3*quarterNote);
	LEDd = 1;
	if(~tetr || ~pia)
		return;
	LEDd = 0;
	playnotetime(note_D4, eighthNote);

	LEDd = 1;
	if(~tetr || ~pia)
		return;
	LEDc = 0;
	playnotetime(note_C4, eighthNote);
	LEDc = 1;
	if(~tetr || ~pia)
		return;
	LEDd = 0;
	playnotetime(note_D4s, eighthNote);
	LEDd = 1;
	if(~tetr || ~pia)
		return;
	LEDc = 0;
	playnotetime(note_C4, eighthNote);
	LEDc =1;
	if(~tetr || ~pia)
		return;
	LEDa = 0;
	playnotetime(note_A3, eighthNote);
	LEDa = 1;
	if(~tetr || ~pia)
		return;
	LEDf = 0;
	playnotetime(note_F3, eighthNote);
	LEDf = 1;
	if(~tetr || ~pia)
		return;
	LEDa = 0;
	playnotetime(note_A3, eighthNote);
	LEDa = 1;
	if(~tetr || ~pia)
		return;
	LEDc = 0;
	playnotetime(note_C4, eighthNote);
	LEDc = 1;
	if(~tetr || ~pia)
		return;
	LEDd = 0;
	playnotetime(note_D4, eighthNote);
	LEDd = 1;
	if(~tetr || ~pia)
		return;
	LEDc = 0;
	playnotetime(note_C4, eighthNote);
	LEDc = 1;
	if(~tetr || ~pia)
		return;
	LEDa = 0;
	playnotetime(note_A3, quarterNote);
	LEDa = 1;
	if(~tetr || ~pia)
		return;
	LEDf = 0;
	playnotetime(note_F4, eighthNote);
	LEDf = 1;
	if(~tetr || ~pia)
		return;
	LEDe = 0;
	playnotetime(note_E4, eighthNote);
	LEDe = 1;
	if(~tetr || ~pia)
		return;
	LEDf = 0;
	playnotetime(note_F4, eighthNote);
	LEDf = 1;
	if(~tetr || ~pia)
		return;
	LEDd = 0;
	playnotetime(note_D4, eighthNote);
	LEDd = 1;
	if(~tetr || ~pia)
		return;
	LEDc = 0;
	playnotetime(note_C4, eighthNote);
	LEDc = 1;
	if(~tetr || ~pia)
		return;
	LEDd = 0;
	playnotetime(note_D4, eighthNote);
	LEDd = 1;
	if(~tetr || ~pia)
		return;
	LEDc = 0;
	playnotetime(note_C4, eighthNote);
    LEDc = 1;
	if(~tetr || ~pia)
		return;
	LEDa = 0;
	playnotetime(note_A3, eighthNote);
	LEDa = 1;
	if(~tetr || ~pia)
		return;
	LEDf = 0;
	playnotetime(note_F4, eighthNote);
	LEDf = 1;
	if(~tetr || ~pia)
		return;
	LEDa = 0;
	playnotetime(note_A3, eighthNote);
	LEDa = 1;
	if(~tetr || ~pia)
		return;
	LEDf = 0;
	playnotetime(note_F4, eighthNote);
	LEDf = 1;
}

void setTempo()
{
  wholeNote = 4 * quarterNote;
  halfNote = 2 * quarterNote;
  eighthNote = quarterNote / 2;
}

void displayBPM()
{
 
	uart_init();

	

	if (inc == 0)
	{
        uart_transmit('N');
        uart_transmit('O');
		uart_transmit('R');
        uart_transmit('M');
        uart_transmit('A');
        uart_transmit('L');
	
    }
	else if (inc == 1)
	{
	    uart_transmit('S');
        uart_transmit('L');
        uart_transmit('O');
        uart_transmit('W');
        uart_transmit('E');
        uart_transmit('R');

	}
	else if (inc == 2 )
	{
		uart_transmit('F');
        uart_transmit('A');
        uart_transmit('S');
        uart_transmit('T');
		uart_transmit('E');
        uart_transmit('R');
	
	}

}
